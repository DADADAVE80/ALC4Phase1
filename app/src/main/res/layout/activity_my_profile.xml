<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyProfileActivity">

    <RelativeLayout
        android:id="@+id/photoView_textView"
        android:layout_width="match_parent"
        android:layout_height="315dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/name"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="258dp"
            android:layout_height="204dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/photo"
            android:focusableInTouchMode="true"
            android:longClickable="true"
            android:rotation="270"
            android:saveEnabled="true"
            android:scaleType="centerCrop"
            android:src="@drawable/daviddada"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/personal_data"
        android:layout_width="394dp"
        android:layout_height="333dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:text="Track:    Android"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="Country:   Nigeria"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="Email:    daveproxy80@gmail.com"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="Phone Number:     +2347053702976"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="Slack Username:    David Dada"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>